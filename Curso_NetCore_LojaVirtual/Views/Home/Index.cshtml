@using (Html.BeginForm("Index", "Home",  FormMethod.Post,  new { @action =  "#formulario" }))
{



    <div class="container" id="formulario">
        <div class="row">
            <div class="col-sm-6 offset-sm-3">
                @if (TempData["MSG_SUCESSO"] != null)
                {
                    <p class="alert alert-success">@TempData["MSG_SUCESSO"]</p>
                }
            </div>
        </div>
        <div class="row">


            <div class="col-sm-6 col-md-6">
                @*<span class="text-danger">@Html.ValidationSummary()</span>*@

                <div class="form-group">
                    <label for="nome">Informe o seu E-mail e Receba nossas novidades</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                        </div>
                        @*@Html.EditorFor(m => m.email, new { htmlAtributes = new {  @class = "form-control"} })*@
                        <input type="text" class="form-control" name="email" id="email" placeholder="Informe seu E-mail" />
                    </div>
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.email)</span>
                </div>

            </div>
            <div class="col-sm-3 col-md-3" style="margin-top:6px; margin-left: -8px">
                <br />
                <button class="subscribe btn btn-primary btn-block"> Enviar </button>

            </div>

        </div>
    </div>
}