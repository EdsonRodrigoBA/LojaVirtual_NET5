@model Produtos

@if (Model != null)
{


    <div class="container-fluid" id="code_prod_detail" style="margin-top: 50px">
        <div class="card">
            <div class="row no-gutters">
                <aside class="col-sm-5 border-right">
                    <article class="gallery-wrap">
                        <div class="img-big-wrap">
                            @if (@Model.Imagens != null)
                            {
                                if (Model.Imagens.Count > 0)
                                {
                                    <div> <a href="@Model.Imagens.ElementAtOrDefault(0).caminho" data-fancybox=""><img src="@Model.Imagens.ElementAtOrDefault(0).caminho"></a></div>

                                }
                                else
                                {
                                    <div> <a href="/img/produtoimagem.png" data-fancybox=""><img src="/img/produtoimagem.png"></a></div>

                                }
                            }
                        </div> <!-- slider-product.// -->
                        <div class="img-small-wrap">
                            @if (@Model.Imagens != null)
                            {
                                if (Model.Imagens.Count > 0)
                                {
                                    foreach (var item in Model.Imagens)
                                    {
                                        <div class="item-gallery"> <img src="@item.caminho"></div>
                                    }
                                }

                            }
                        </div>
                    </article>
                </aside>
                <aside class="col-sm-7">
                    <article class="p-5">
                        <h3 class="title mb-3">@Model.nome</h3>

                        <div class="mb-3">
                            <var class="price h3 text-warning">
                                <span class="currency"></span><span class="num">@Model.valor.ToString("c")</span>
                            </var>
                            <span>/UN</span>
                        </div>
                        <dl>
                            <dt>Descrição</dt>
                            <dd>
                                <p>
                                    @Model.descricao
                                </p>
                            </dd>
                        </dl>
                        <dl class="row">
                            <dt class="col-sm-3">Peso (KG)</dt>
                            <dd class="col-sm-9">@Model.peso</dd>

                            <dt class="col-sm-3">Largura</dt>
                            <dd class="col-sm-9">@Model.largura </dd>

                            <dt class="col-sm-3">Altura</dt>
                            <dd class="col-sm-9">@Model.altura</dd>

                            <dt class="col-sm-3">Comprimento</dt>
                            <dd class="col-sm-9">@Model.comprimento</dd>

                            <dt class="col-sm-3">Quantidade Estoque</dt>
                            <dd class="col-sm-9">@Model.quantidade</dd>
                        </dl>

                        <hr>

                        <hr>
                        <a href="#" class="btn  btn-primary"> Comprar Agora </a>
                        <a asp-action="AdicionarItem" asp-controller="Carrinho" asp-route-id="@Model.Id" class="btn  btn-outline-primary">
                            <i class="fas fa-shopping-cart"></i> Adicionar ao Carrinho
                        </a>
                    </article>
                </aside>
            </div>
        </div>
    </div>
}
else
{
    <div class="container" style="margin-top: 50px">

        <div class="alert alert-info"><b>Ops !!</b> No momento nenhum produto foi encontrado.</div>
    </div>
}