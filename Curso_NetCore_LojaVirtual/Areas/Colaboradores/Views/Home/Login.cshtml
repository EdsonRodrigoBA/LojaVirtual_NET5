
@model Curso_NetCore_LojaVirtual.Models.Colaboradores
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main role="main">
    <br />
    <br />
    <section class="container">
        <aside class="col-sm-6 offset-sm-4">
            <h3 class="subtitle-doc text-center">
                Login - Administrativo
            </h3>
            <div id="code_login_1">
                <div class="card">
                    <article class="card-body">
                        @if (ViewData["MSG_ERRO"] != null)
                        {
                            <p class="alert alert-danger">@Html.Raw(@ViewData["MSG_ERRO"])</p>
                        }
                        <h4 class="card-title mb-4 mt-1">Acessar Painel Administrativo</h4>
                        <form method="post">
                            <div class="form-group">

                                <label asp-for="email">E-mail</label>
                                <input asp-for="email" class="form-control" placeholder="Email" type="email">
                                <span class="text-danger" asp-validation-for="email">  </span>

                            </div>
                            <div class="form-group">
                                <a class="float-right" href="#">Esqueceu a Senha?</a>
                                <label asp-for="senha">Senha</label>
                                <input asp-for="senha" class="form-control" placeholder="******" type="password">
                                <span class="text-danger" asp-validation-for="senha">  </span>

                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Acessar </button>
                            </div>
                        </form>
                    </article>
                </div>
            </div>
        </aside>
    </section>

    <hr class="featurette-divider">


</main>